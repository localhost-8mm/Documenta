#include<stdio.h>

#include "singlylist.h"

int main()

{

    int ch;

    start=NULL;

    while(1)

    {

        printf("\n1.Create\n");

        printf("2.Delete\n");

        printf("3.Display\n");

        printf("4.Exit\n");

        printf("Enter your choice: ");

        scanf("%d",&ch);

        switch(ch)

        {

            case 1:create();  break;

            case 2:delete();  break;            

            case 3:display(); break;

            case 4:exit(0);

        }

    }

}
